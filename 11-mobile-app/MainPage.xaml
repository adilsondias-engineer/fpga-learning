<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:_11_mobile_app.ViewModels"
             xmlns:models="clr-namespace:_11_mobile_app.Models"
             xmlns:converters="clr-namespace:_11_mobile_app.Converters"
             x:Class="_11_mobile_app.MainPage"
             Title="FPGA BBO Trading Terminal">

    <ContentPage.BindingContext>
        <vm:BboViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <Frame Grid.Row="0" BorderColor="Gray" Padding="15">
            <Grid RowSpacing="10" ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Broker URL -->
                <Entry Grid.Row="0" Grid.Column="0"
                       Placeholder="MQTT Broker (192.168.0.203)"
                       Text="{Binding BrokerUrl}"
                       IsEnabled="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}" />

                <!-- Connect Button -->
                <Button Grid.Row="0" Grid.Column="1"
                        Text="Connect"
                        Command="{Binding ConnectCommand}"
                        IsVisible="{Binding IsConnected, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="Green"
                        TextColor="White" />

                <!-- Disconnect Button -->
                <Button Grid.Row="0" Grid.Column="1"
                        Text="Disconnect"
                        Command="{Binding DisconnectCommand}"
                        IsVisible="{Binding IsConnected}"
                        BackgroundColor="Red"
                        TextColor="White" />

                <!-- Status -->
                <Label Grid.Row="1" Grid.Column="0"
                       Text="{Binding StatusMessage}"
                       TextColor="{Binding StatusColor}"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />

                <Label Grid.Row="1" Grid.Column="1"
                       Text="{Binding MessageCount, StringFormat='Messages: {0:N0}'}"
                       FontSize="12"
                       VerticalOptions="Center"
                       HorizontalOptions="End" />
            </Grid>
        </Frame>

        <!-- Symbol Selector -->
        <Frame Grid.Row="1" BorderColor="Gray" Padding="10" IsVisible="{Binding HasBboData}">
            <ScrollView Orientation="Horizontal" HeightRequest="45">
                <HorizontalStackLayout Spacing="10" BindableLayout.ItemsSource="{Binding BboUpdates}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:BboUpdate">
                            <Button Text="{Binding Symbol}"
                                    Clicked="OnSymbolTapped"
                                    Padding="15,8"
                                    FontAttributes="Bold"
                                    FontSize="14" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>

        <!-- BBO Display (ESP32-style Clean Layout) -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="15" Padding="10"
                                 IsVisible="{Binding SelectedSymbol, Converter={StaticResource IsNotNullConverter}}">

                <!-- Main BBO Card -->
                <Frame BorderColor="DodgerBlue" Padding="25" CornerRadius="10" BackgroundColor="WhiteSmoke">
                    <VerticalStackLayout Spacing="20">

                        <!-- Symbol Header -->
                        <Label Text="{Binding SelectedSymbol.Symbol}"
                               FontSize="40"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="DodgerBlue" />

                        <BoxView HeightRequest="2" Color="LightGray" />

                        <!-- BID -->
                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="BID:"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="Green"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="1"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="Green"
                                   VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="$" FontSize="24" />
                                        <Span Text="{Binding SelectedSymbol.Bid.Price, StringFormat='{0:F2}'}" />
                                        <Span Text="{Binding SelectedSymbol.Bid.Shares, StringFormat=' ({0})'}"
                                              FontSize="20" TextColor="DarkGreen" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>

                        <!-- ASK -->
                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="ASK:"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="Red"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="1"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="Red"
                                   VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="$" FontSize="24" />
                                        <Span Text="{Binding SelectedSymbol.Ask.Price, StringFormat='{0:F2}'}" />
                                        <Span Text="{Binding SelectedSymbol.Ask.Shares, StringFormat=' ({0})'}"
                                              FontSize="20" TextColor="DarkRed" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>

                        <BoxView HeightRequest="2" Color="LightGray" />

                        <!-- SPREAD -->
                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                   Text="SPREAD:"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="DarkOrange"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="1"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="DarkOrange"
                                   VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="$" FontSize="22" />
                                        <Span Text="{Binding SelectedSymbol.Spread.Price, StringFormat='{0:F2}'}" />
                                        <Span Text="{Binding SelectedSymbol.Spread.Percent, StringFormat=' ({0:F2}%)'}"
                                              FontSize="18" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>

                    </VerticalStackLayout>
                </Frame>

                <!-- All Symbols Grid -->
                <Label Text="All Symbols" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5" />

                <CollectionView ItemsSource="{Binding BboUpdates}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:BboUpdate">
                            <Frame Margin="0,5" Padding="15" BorderColor="LightGray" CornerRadius="5">
                                <Grid ColumnSpacing="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Text="{Binding Symbol}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           VerticalOptions="Center" />

                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="Bid" FontSize="10" TextColor="Gray" />
                                        <Label Text="{Binding Bid.Price, StringFormat='${0:F2}'}"
                                               FontSize="14"
                                               TextColor="Green"
                                               FontAttributes="Bold" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2">
                                        <Label Text="Ask" FontSize="10" TextColor="Gray" />
                                        <Label Text="{Binding Ask.Price, StringFormat='${0:F2}'}"
                                               FontSize="14"
                                               TextColor="Red"
                                               FontAttributes="Bold" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="3" HorizontalOptions="End">
                                        <Label Text="Spread" FontSize="10" TextColor="Gray" />
                                        <Label Text="{Binding Spread.Price, StringFormat='${0:F2}'}"
                                               FontSize="14"
                                               TextColor="DarkOrange"
                                               FontAttributes="Bold" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer -->
        <Frame Grid.Row="3" BorderColor="Gray" Padding="10">
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="{Binding SelectedSymbol.TimestampString, StringFormat='Last Update: {0}'}"
                       FontSize="12"
                       VerticalOptions="Center" />

                <Button Grid.Column="1"
                        Text="Clear"
                        Command="{Binding ClearDataCommand}"
                        FontSize="12"
                        Padding="15,8" />
            </Grid>
        </Frame>

    </Grid>

</ContentPage>
